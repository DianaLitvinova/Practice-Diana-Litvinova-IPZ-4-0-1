@model UniqueContraindicationsViewModel

<div class="row">
    <div class="col-md-6">
        <h5 class="mb-3">
            <i class="fas fa-exclamation-triangle text-warning me-2"></i>
            Протипоказання:
        </h5>
        <ul class="list-unstyled">
            @if (Model.Contraindications.Any())
            {
                foreach (var item in Model.Contraindications)
                {
                    <li class="mb-2">
                        <i class="fas fa-exclamation-circle text-warning me-2"></i>
                        @item
                    </li>
                }
            }
            else
            {
                <li class="text-success">
                    <i class="fas fa-check me-2"></i>
                    Немає протипоказань
                </li>
            }
        </ul>
    </div>
    
    <div class="col-md-6">
        <h5 class="mb-3">
            <i class="fas fa-ban text-danger me-2"></i>
            Заборонені продукти:
        </h5>
        <ul class="list-unstyled">
            @if (Model.ForbiddenProducts.Any())
            {
                foreach (var item in Model.ForbiddenProducts)
                {
                    <li class="mb-2">
                        <i class="fas fa-times-circle text-danger me-2"></i>
                        @item
                    </li>
                }
            }
            else
            {
                <li class="text-success">
                    <i class="fas fa-check me-2"></i>
                    Немає заборонених продуктів
                </li>
            }
        </ul>
    </div>
</div>
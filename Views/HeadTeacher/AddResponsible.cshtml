@model Diana_Litvinova_IPZ_4_0_1.Models.AddResponsibleViewModel

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Додати відповідальну особу</title>
</head>
<body>
    <div class="container mt-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h2 class="mb-4">
                    <i class="fas fa-user-plus text-primary me-2"></i>
                    Додати відповідальну особу
                </h2>

                @if (ViewBag.FamilyName != null)
                {
                    <div class="mb-4">
                        <h5>Сім'я: @ViewBag.FamilyName</h5>
                    </div>
                }

                <form asp-action="AddResponsible" method="post">
                    <input type="hidden" asp-for="FamilyId" />

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    }

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Fullname" class="form-label required"></label>
                                <input asp-for="Fullname" class="form-control" />
                                <span asp-validation-for="Fullname" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Phone" class="form-label required"></label>
                                <input asp-for="Phone" class="form-control" placeholder="+380XXXXXXXXX" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Families" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Назад
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Зберегти
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
@model Diana_Litvinova_IPZ_4_0_1.Models.AddChildViewModel

<div class="container mt-4">
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <h2 class="mb-4">
                <i class="fas fa-child text-primary me-2"></i>
                Додати дитину
            </h2>

            <form asp-action="AddChild" method="post">
                <input type="hidden" asp-for="FamilyId" />

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                }

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="FullName" class="required"></label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="GroupId" class="required"></label>
                            <select asp-for="GroupId" asp-items="Model.Groups" class="form-select">
                                <option value="">-- Оберіть групу --</option>
                            </select>
                            <span asp-validation-for="GroupId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="StartDate" class="required"></label>
                            <input asp-for="StartDate" class="form-control" type="date" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="SelectedContraindications"></label>
                            <select asp-for="SelectedContraindications" asp-items="Model.AvailableContraindications"
                                    class="form-select" multiple size="8">
                            </select>
                            <small class="text-muted">Використовуйте Ctrl для вибору декількох значень</small>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Families" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Назад
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Зберегти
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
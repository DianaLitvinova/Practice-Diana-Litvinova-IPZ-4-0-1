@model Diana_Litvinova_IPZ_4_0_1.Models.EditFamilyViewModel

<div class="container mt-4">
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <h2 class="mb-4">
                <i class="fas fa-edit text-primary me-2"></i>
                Редагування сім'ї
            </h2>

            <form asp-action="EditFamily" method="post">
                <input type="hidden" asp-for="Id" />

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                }

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ResponsibleName" class="required"></label>
                            <input asp-for="ResponsibleName" class="form-control" />
                            <span asp-validation-for="ResponsibleName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PhoneResponsible" class="required"></label>
                            <input asp-for="PhoneResponsible" class="form-control" />
                            <span asp-validation-for="PhoneResponsible" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="PlaceOfResidence" class="required"></label>
                    <input asp-for="PlaceOfResidence" class="form-control" />
                    <span asp-validation-for="PlaceOfResidence" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Families" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Назад
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Зберегти
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}